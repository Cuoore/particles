{
  "Cuoore custom element": {
    "prefix": "cuoorece",
    "body": [
      "import { customElementPrefix as prefix } from '../../particle'",
      "import colors from '../../theme/colors'",
      "",
      "const attributes = {",
      "  one: {",
      "    name: 'one',",
      "    default: false,",
      "  },",
      "  two: {",
      "    name: 'one',",
      "    default: '200px',",
      "  },",
      "}",
      "",
      "const classes = {",
      "  default: `${prefix}-${2:name}`,",
      "}",
      "",
      "class ${1:component} extends HTMLElement {",
      "  constructor(...args) {",
      "    super(...args)",
      "    this.setShadowRoot()",
      "    this.setAttributes()",
      "  }",
      "",
      "  static get observedAttributes() {",
      "    // put here your observedAttributes",
      "    return [attributes.one.name] ",
      "  }",
      "",
      "  setAttributes() {",
      "    for (const key in attributes) {",
      "      try {",
      "        const attribute = attributes[key]",
      "        this[attribute.name] = this.getAttribute(attribute.name) || attribute.default",
      "      } catch (error) {",
      "        console.error(`the attribute ${attribute.name} has errors`)",
      "      }",
      "    }",
      "  }",
      "",
      "  setShadowRoot() {",
      "    this.shadow = this.attachShadow({ mode: 'open' })",
      "  }",
      "",
      "  connectedCallback() {",
      "    this.render()",
      "  }",
      "",
      "  attributeChangedCallback(attrName, oldVal, newVal) {",
      "    this[attrName] = newVal",
      "    this.render()",
      "  }",
      "",
      "  setTemplate() {",
      "    this.template = `",
      "      <style>",
      "      .${classes.default}  {",
      "        // ... put here the components styles ...",
      "      }",
      "      </style>",
      "      // ... put here the component markup ...",
      "    `",
      "  }",
      "",
      "  render() {",
      "    this.setTemplate()",
      "    this.shadow.innerHTML = this.template",
      "  }",
      "}",
      "",
      "if (!customElements.get(`${prefix}-${2:name}`)) {",
      "  customElements.define(`${prefix}-${2:name}`, ${1:component} )",
      "}",
      ""
    ],
    "description": "Cuoore custom element"
  }
}
